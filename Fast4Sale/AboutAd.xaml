<Window x:Class="Fast4Sale.AboutAd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
        Title="Подробнее"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Border Background="#1E293B" CornerRadius="12" BorderBrush="#334155" BorderThickness="1" Padding="40">
                <StackPanel>
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Об объявлении" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Fast4Sale - С нами выгодно!" FontSize="14" Foreground="#94A3B8"/>
                    </StackPanel>

                    <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Основная информация" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Название объекта" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="Name" Height="120" FontSize="14" Background="#334155" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Тип недвижимости" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="Type" Height="40" Background="#334155" Foreground="White" FontSize="15"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0">
                                    <TextBlock Text="Адрес" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="AddressBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0">
                                    <TextBlock Text="Описание" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="Description" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Характеристики" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                            <WrapPanel>
                                <StackPanel Width="200" Margin="0,0,30,15">
                                    <TextBlock Text="Площадь (м²)" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="AreaBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Width="200" Margin="0,0,30,15">
                                    <TextBlock Text="Количество комнат" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="RoomsBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Width="200" Margin="0,0,30,15">
                                    <TextBlock Text="Этаж" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="FloorBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Width="200" Margin="0,0,0,15">
                                    <TextBlock Text="Всего этажей" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="TotalFloorsBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Цена и контакты" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>

                            <WrapPanel>
                                <StackPanel Width="300" Margin="0,0,30,15">
                                    <TextBlock Text="Цена (₽)" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="PriceBox" Height="40" FontSize="14" FontWeight="Bold" Foreground="#10B981" Background="#334155"/>
                                </StackPanel>

                                <StackPanel Width="300" Margin="0,0,0,15">
                                    <TextBlock Text="Контактное лицо" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="ContactBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Width="300" Margin="0,0,30,0">
                                    <TextBlock Text="Телефон" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="PhoneBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Width="300" Margin="0,0,0,0">
                                    <TextBlock Text="Email" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                                    <TextBlock x:Name="EmailBox" Height="40" FontSize="14" Background="#334155" Foreground="White"/>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#475569" BorderThickness="2" CornerRadius="8" Height="150" Background="#334155" Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="AdImage" Stretch="UniformToFill"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="Write" Content="Связаться с продавцом" Width="210" Height="50" Background="#10B981" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,15,0"/>
                        <Button x:Name="Cancel" Content="Вернуться к объявлениям" Width="210" Height="50" Background="Red" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,15,0" Click="Cancel_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>

</Window>