<Window x:Class="Fast4Sale.Log_Okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
        Title="Вход"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="450" Background="#0F172A">

    <Grid Margin="40" HorizontalAlignment="Center">
        <Border Background="White" Padding="30" CornerRadius="12" Width="340">
            <StackPanel>

                <TextBlock Text="Авторизация" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Логин / Email"/>
                <TextBox x:Name="Log" Margin="0,5,0,10"/>

                <TextBlock Text="Пароль"/>
                <TextBox x:Name="Par" Margin="0,5,0,10"/>

                <Button x:Name="Whod" Content="Войти" Height="45" Click="Whod_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>