<Window x:Class="Fast4Sale.New_ob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
                Title="Добавить объект"
        Height="600" Width="500" Background="#F0F2F5">

    <ScrollViewer>
        <Grid Margin="40" HorizontalAlignment="Center">
            <Border Background="White" Padding="30" CornerRadius="12" Width="380">

                <StackPanel>
                    <TextBlock Text="Добавить недвижимость"
                               FontSize="28" FontWeight="SemiBold"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Название"/>
                    <TextBox Margin="0,5,0,10"/>

                    <TextBlock Text="Адрес"/>
                    <TextBox Margin="0,5,0,10"/>

                    <TextBlock Text="Цена"/>
                    <TextBox Margin="0,5,0,10"/>

                    <TextBlock Text="Описание"/>
                    <TextBox Height="120" AcceptsReturn="True" Margin="0,5,0,10"/>

                    <TextBlock Text="Изображение"/>
                    <Button Content="Загрузить" Height="40" Width="150" Margin="0,5,0,20"/>

                    <Button Content="Создать объявление" Height="48"/>
                </StackPanel>

            </Border>
        </Grid>
    </ScrollViewer>
</Window>