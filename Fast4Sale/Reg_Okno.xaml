<Window x:Class="Fast4Sale.Reg_Okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
                Title="Регистрация"
        Height="500" Width="450" Background="#F0F2F5">

    <Grid Margin="40" HorizontalAlignment="Center">
        <Border Background="White" Padding="30" CornerRadius="12" Width="340">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="28" FontWeight="SemiBold"
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Логин"/>
                <TextBox Margin="0,5,0,10"/>

                <TextBlock Text="Email"/>
                <TextBox Margin="0,5,0,10"/>

                <TextBlock Text="Пароль"/>
                <PasswordBox Margin="0,5,0,10"/>

                <TextBlock Text="Повторите пароль"/>
                <PasswordBox Margin="0,5,0,20"/>

                <Button Content="Создать аккаунт" Height="45"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>