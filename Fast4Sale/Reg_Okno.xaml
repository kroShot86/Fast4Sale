<Window x:Class="Fast4Sale.Reg_Okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
        Title="Регистрация"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="450" Background="#0F172A">

    <Grid Margin="40" HorizontalAlignment="Center">
        <Border Background="White" Padding="30" CornerRadius="12" Width="340">
            <StackPanel>
                
                <TextBlock Text="Регистрация" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Имя пользователя"/>
                <TextBox x:Name="Login" Margin="0,5,0,10"/>

                <TextBlock Text="Email"/>
                <TextBox x:Name="Email" Margin="0,5,0,10"/>

                <TextBlock Text="Номер телефона"/>
                <TextBox x:Name="PhoneNumber" Margin="0,5,0,10"/>

                <TextBlock Text="Пароль"/>
                <TextBox x:Name="Parol" Margin="0,5,0,10"/>

                <Button x:Name="Kreate" Content="Создать аккаунт" Height="45" Click="Kreate_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>