<Window x:Class="Fast4Sale.Spisok_ob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
        Title="Объявления" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#1E293B">

    <Grid>
        <Border Background="#0F172A" Height="70" VerticalAlignment="Top" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="20">

                <Button x:Name="Add" Content="➕ Добавить" Width="120" Height="25" Background="#10B981" Foreground="White" FontWeight="Bold" Margin="0,0,20,0" Click="Add_Click"/>

                <TextBlock Text="Тип:" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="White"/>
                <ComboBox Width="120" Height="30" SelectedIndex="0" Background="#334155" Foreground="Black" FontSize="15">

                    <ComboBoxItem Content="Все" Foreground="Black" FontSize="15"/>
                    <ComboBoxItem Content="Квартира" Foreground="Black" FontSize="15"/>
                    <ComboBoxItem Content="Дом" Foreground="Black" FontSize="15"/>

                </ComboBox>

                <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="30,0,10,0" Foreground="White"/>
                <ComboBox Width="120" Height="30" Background="#334155" Foreground="Black" FontSize="15">
                    <ComboBoxItem Content="По возрастанию цен" FontSize="15" Foreground="Black"/>
                    <ComboBoxItem Content="По убыванию цен" FontSize="15" Foreground="Black"/>
                </ComboBox>

                <TextBlock Text="Стоимость от" VerticalAlignment="Center" Margin="20,0,10,0" Foreground="White"/>
                <TextBox Width="80" Height="30" Background="#334155" Foreground="White" TextAlignment="Center" FontSize="16"/>
                
                <TextBlock Text="до" VerticalAlignment="Center" Margin="10,0,10,0" Foreground="White"/>
                <TextBox Width="80" Height="30" Background="#334155" Foreground="White" TextAlignment="Center" FontSize="16"/>

            </StackPanel>
        </Border>

        <ScrollViewer Margin="20,80,20,20">
            <StackPanel x:Name="ListPanel">
                

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>