<Window x:Class="Fast4Sale.Write"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast4Sale"
        mc:Ignorable="d"
        Title="Контактная информация продавца"
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Border Background="#1E293B" CornerRadius="12" BorderBrush="#334155" BorderThickness="1" Padding="30">
            <StackPanel>
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Контактная информация" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Свяжитесь с продавцом по указанным контактам" FontSize="13" Foreground="#94A3B8" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>

                <StackPanel>
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Имя продавца" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                        <Border Background="#334155" Height="45" CornerRadius="6" BorderBrush="#475569" BorderThickness="1" Padding="10">
                            <TextBlock x:Name="Name" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Email" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                        <Border Background="#334155" Height="45" CornerRadius="6" BorderBrush="#475569" BorderThickness="1" Padding="10">
                            <TextBlock x:Name="Email" FontSize="14" Foreground="White" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Email_MouseLeftButtonUp"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Номер телефона" FontSize="13" Margin="0,0,0,5" Foreground="#CBD5E1"/>
                        <Border Background="#334155" Height="45" CornerRadius="6" BorderBrush="#475569" BorderThickness="1" Padding="10">
                            <TextBlock x:Name="PhoneNumber" FontSize="14" Foreground="White" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="PhoneNumber_MouseLeftButtonUp"/>
                        </Border>
                        <TextBlock x:Name="CopyHint" Text="Скопировано!" FontSize="12" Foreground="LightGreen" HorizontalAlignment="Center" Margin="0,5,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <Button x:Name="CloseButton" Content="Закрыть" Width="200" Height="40" Background="#EF4444" Foreground="White" FontSize="14" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" Margin="0,10,0,0" HorizontalAlignment="Center" Click="CloseButton_Click"/>
                
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>